       // Most of the devices have rtcp-mux in their offer.
-      nodeContent.push("a=rtcp-mux");
+      section.push("a=rtcp-mux");
+
+      // Add this section to the full SDP.
+      sdp.push(...section);
     }
 
-    sdp.push(nodeContent.join("\r\n"));
     return sdp.join("\r\n");
   }
 };
